<table class="min-w-full divide-y divide-gray-300">
  <thead class="bg-gray-50">
    <tr>
      <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= InvestmentCalculatorResult.human_attribute_name(:number) %></th>
      <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= InvestmentCalculatorResult.human_attribute_name(:amount) %></th>
      <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= InvestmentCalculatorResult.human_attribute_name(:crypto_amount) %></th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200 bg-white">
    <%= render partial: "investment_calculator_result", collection: results %>
  </tbody>
</table>
